<?import tornadofx.Form?>
<?import tornadofx.Fieldset?>
<?import tornadofx.Field?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>

<Form xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
    <Fieldset text="%frm_building">
        <Field text="%col_buildingType">
            <ComboBox fx:id="cbType" maxWidth="Infinity"/>
        </Field>
        <Field text="%col_areaNum">
            <ComboBox fx:id="cbArea" maxWidth="Infinity"/>
        </Field>
        <Field text="%col_buildingInfo">
            <TextArea fx:id="txInfo"/>
        </Field>
    </Fieldset>
    <HBox spacing="10">
        <Button text="%cmd_save" onAction="#saveForm"/>
        <Button text="%cmd_cancel" onAction="#close"/>
    </HBox>
</Form>