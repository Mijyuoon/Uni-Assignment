<?import tornadofx.Form?>
<?import tornadofx.Fieldset?>
<?import tornadofx.Field?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<Form xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
    <Fieldset text="%frm_personRole">
        <Field text="%col_personRoleName">
            <TextField fx:id="txName"/>
        </Field>
    </Fieldset>
    <HBox spacing="10">
        <Button text="%cmd_save" onAction="#saveForm"/>
        <Button text="%cmd_cancel" onAction="#close"/>
    </HBox>
</Form>