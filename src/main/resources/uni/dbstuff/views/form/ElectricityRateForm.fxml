<?import tornadofx.Form?>
<?import tornadofx.Fieldset?>
<?import tornadofx.Field?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.DatePicker?>

<Form xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
    <Fieldset text="%frm_payRate">
        <Field text="%col_electricRateInit">
            <DatePicker fx:id="txBegin" maxWidth="Infinity"/>
        </Field>
        <Field text="%col_electricRateFinal">
            <DatePicker fx:id="txFinish" maxWidth="Infinity"/>
        </Field>
        <Field text="%col_personPhoneNum">
            <TextField fx:id="txRate"/>
        </Field>
    </Fieldset>
    <HBox spacing="10">
        <Button text="%cmd_save" onAction="#saveForm"/>
        <Button text="%cmd_cancel" onAction="#close"/>
    </HBox>
</Form>